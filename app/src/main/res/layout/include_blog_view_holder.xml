<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/blogs_item_margin"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:padding="@dimen/blogs_item_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/blogs_item_margin"
        android:orientation="vertical"
        android:padding="@dimen/blogs_item_padding">

        <TextView
            android:id="@+id/blog_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/blogs_item_name_margin_bottom"
            android:textSize="@dimen/blogs_item_name" />

        <TextView
            android:id="@+id/description_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/blogs_item_count" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_height"
            android:layout_marginTop="@dimen/blogs_item_border_margin"
            android:layout_marginBottom="@dimen/blogs_item_border_margin"
            android:background="@color/view_border_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_num_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/blogs_item_count" />

            <TextView
                android:id="@+id/last_update_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/blogs_item_last_update" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>