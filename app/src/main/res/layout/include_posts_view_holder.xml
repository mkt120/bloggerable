<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/post_view_holder_margin"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:padding="@dimen/post_view_holder_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/post_view_holder_content_padding">

        <TextView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/post_view_holder_post_title_margin_bottom"
            android:singleLine="true"
            android:textSize="@dimen/post_view_holder_post_title_text_size" />

        <TextView
            android:id="@+id/contents_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:textSize="@dimen/post_view_holder_post_content_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_view_holder_divider_height"
            android:layout_marginTop="@dimen/post_view_holder_divider_margin_top"
            android:layout_marginBottom="@dimen/post_view_holder_divider_margin_bottom"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comment_count_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/post_view_holder_post_comment_count_text_size" />

            <TextView
                android:id="@+id/published_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/post_view_holder_post_publish_update_date_text_size" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
